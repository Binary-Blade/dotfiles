# ZSH - Environment Configuration
# Author: Binary-Blade VH

# Oh My Zsh Configuration
export ZSH="$HOME/.config/.oh-my-zsh"

# ENV Variables
source ~/.config/envman/load.sh

# fzf Configuration
[ -f "/Users/binary/.fzf/shell/completion.zsh" ] && source "/Users/binary/.fzf/shell/completion.zsh"
[ -f "/Users/binary/.fzf/shell/key-bindings.zsh" ] && source "/Users/binary/.fzf/shell/key-bindings.zsh"

# Plugins
plugins=(git fzf fzf-zsh-plugin zsh-syntax-highlighting zsh-autosuggestions)

# Starship Prompt
eval "$(starship init zsh)"

# Initialize Oh My Zsh
source $ZSH/oh-my-zsh.sh







# ============================================================
# ZSH OPTIONS AND OTHER CONFIGURATIONS
